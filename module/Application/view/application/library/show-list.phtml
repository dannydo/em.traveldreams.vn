    <div class="col-xs-12 col-sm-12 col-md-8">
        <form class="form-horizontal" role="form" method="post" action="/word/get-word" id="content-word">
        </form>
    </div>
    <!--/span-->
</div>


<script>
    $(function() {
        $('#filter').fastLiveFilter('#word-list', {
            timeout: 200
        });
    });

    $('.word-list-item').click(function() {
        $('body').showLoading( {
            'afterShow': function() {
                $.ajax({url:"/word/get-word/1",success:function(result){
                    $("#content-word").html(result);
                    $('body').hideLoading();
                }});
            }
        });
    });

    $(function () {
        $('form').bind('submit', function () {
            $('body').showLoading( {
                'afterShow': function() {
                    $.ajax({
                        type: 'post',
                        url: '/word/get-word',
                        data: $('form').serialize(),
                        success: function (result) {
                            $("#content-word").html(result);
                            $('body').hideLoading();
                        }
                    });
                }
            });
            return false;
        });
    });
</script>